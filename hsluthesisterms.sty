\DeclareOption{sas}{\def\thesistypecat{3}}
\DeclareOption{wipro}{\def\thesistypecat{4}}



% Preliminary definitions
%%%%%%%%%%%%%%%%%%
\newcommand*{\thesisTerm}[5]{%
    \ifcase\thesistypecat\relax #1%
    \or #2%
    \or #3%
    \or #4%
    \or #5%
    \fi
}


